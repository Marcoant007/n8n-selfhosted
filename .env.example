# Chatwoot Configuration
RAILS_ENV=production
SECRET_KEY_BASE=change_this_to_a_secure_random_string_with_at_least_30_characters
FRONTEND_URL=http://localhost:3000

# Database Configuration
DATABASE_URL=postgresql://default:default@postgres:5432/default

# Redis Configuration
REDIS_URL=redis://:default@redis:6379   
REDIS_PASSWORD=default
REDIS_USER=default

# Chatwoot Basic Settings
FORCE_SSL=false
ENABLE_ACCOUNT_SIGNUP=true
MAILER_SENDER_EMAIL=noreply@chatwoot.local

# Storage (using local for development)
ACTIVE_STORAGE_SERVICE=local

# Evolution API Integration
EVOLUTION_API_URL=http://evolution-api:8080
EVOLUTION_API_TOKEN=your_evolution_token_here

# n8n Webhook Integration
N8N_WEBHOOK_URL=http://n8n:5678
